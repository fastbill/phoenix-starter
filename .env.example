# =============================================================================
# Phoenix Framework Starter - Environment Configuration
# =============================================================================
# Copy this file to .env and adjust the values as needed.
# =============================================================================

# Application
APP_ENV=development
APP_DEBUG=true
SERVER_NAME=localhost

# Ports
HTTP_PORT=8080
HTTPS_PORT=8443

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=phoenix
DB_USERNAME=phoenix
DB_PASSWORD=phoenix

# MySQL
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=phoenix
MYSQL_USER=phoenix
MYSQL_PASSWORD=phoenix

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# RabbitMQ (optional - enable with: --profile queue)
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=phoenix
RABBITMQ_PASS=phoenix

# Xdebug
XDEBUG_SERVER_NAME=phoenix
XDEBUG_MODE=debug
