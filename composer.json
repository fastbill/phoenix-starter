{
    "name": "fastbill/phoenix-starter-app",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:fastbill/phoenix.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/fastbill/phoenix-code-quality.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "Fastbill\\Phoenix\\Starter\\": "App"
        }
    },
    "require": {
        "php": "^8.1",
        "fastbill/phoenix-framework": "^0.28.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "fastbill/phoenix-code-quality": "^1.1.0"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1.0"
        },
        "allow-plugins": {
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs:fix": "php-cs-fixer fix",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "hooks:install": "git config core.hooksPath .githooks"
    }
}
