{
    "name": "fastbill/phoenix-starter",
    "description": "Starter project template for Phoenix Framework applications",
    "type": "project",
    "license": "MIT",
    "keywords": ["phoenix", "framework", "starter", "template", "fastbill"],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-pdo": "*",
        "fastbill/phoenix-framework": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "serve": "php -S localhost:8080 -t public"
    }
}
